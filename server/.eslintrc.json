{
    "root": true,
    "globals": {
        "process": true,
        "console": true
    },
    "env": {
        "jasmine": true,
        "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "jasmine"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:jasmine/recommended"
    ],
    "rules": {
        "object-curly-spacing": "off",
        "space-after-keywords": "off",
        "keyword-spacing": ["error", {
            "overrides": {
                "if": {
                    "after": false
                },
                "else": {
                    "after": false
                },
                "for": {
                    "after": false
                },
                "while": {
                    "after": false
                }
            }
        }],
        "space-before-blocks": "off",
        "space-in-brackets": 0,
        "function-call-argument-newline": "off",
        "key-spacing": 0,
        "type-annotation-spacing": 0,
        "quotes": 0,
        "max-len": [
            "error",
            200,
            2,
            {
                "ignoreUrls": true,
                "ignoreComments": false,
                "ignoreRegExpLiterals": true,
                "ignoreStrings": true,
                "ignoreTemplateLiterals": false
            }
        ]
    }
}
