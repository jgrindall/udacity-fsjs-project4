{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "outDir": "./dist",
        "lib": [
            "es2015",
            "dom"
        ],
        "rootDirs": [
            "./src"
        ],
        "strict": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "references":[
        {
            "path": "../lib"
        }
    ],
    "exclude": [
        "node_modules",
        "./dist",
        "./spec",
        "spec",
        "dist"
    ]
}
